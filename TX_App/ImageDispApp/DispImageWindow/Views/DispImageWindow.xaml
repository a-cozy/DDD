    <Grid x:Name="grid1">
        <Border BorderBrush="Cyan">
            <ScrollViewer x:Name="scrollviewer"
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto" 
                      >
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding ScrollChanged}"
                                               CommandParameter="{Binding ElementName=scrollviewer}">
                        </i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Canvas x:Name="canvas" 
                    Width ="{Binding ActualWidth, ElementName=image}" 
                    Height="{Binding ActualHeight, ElementName=image}"
                    RenderOptions.EdgeMode="Aliased"
                    RenderOptions.BitmapScalingMode="NearestNeighbor"
                    >
                    <Canvas.LayoutTransform>
                        <ScaleTransform x:Name="scaleTransform"
                            ScaleX="{Binding ZoomRate}" 
                            ScaleY="{Binding ZoomRate}" />
                    </Canvas.LayoutTransform>
                    <Image x:Name="image" 
                       Source="{Binding ImageSource}"
                       Stretch ="UniformToFill"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                       RenderOptions.EdgeMode="Unspecified"/>
                    <WPF_CC_Sample:RotateLine_MouseDrag 
                        Angle="{Binding RotAngle}"
                        CanvasActualHeight="{Binding ActualHeight, ElementName=image}"
                        CanvasActualWidth="{Binding ActualWidth, ElementName=image}">
                        <Thumb.Template>
                            <ControlTemplate>
                                <Line x:Name="Line1" 
                                  X1="0" 
                                  Y1="0"
                                  X2="{Binding ActualWidth, ElementName=image}"
                                  Y2="{Binding ActualHeight, ElementName=image}"
                                  StrokeThickness="{Binding LineThickness}" Stroke="Yellow" Opacity="0.5"/>
                            </ControlTemplate>
                        </Thumb.Template>
                    </WPF_CC_Sample:RotateLine_MouseDrag>
                    <!--<ContentControl 
