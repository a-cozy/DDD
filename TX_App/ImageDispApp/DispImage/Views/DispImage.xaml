<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DispImage.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:beh="clr-namespace:DispImage"
             xmlns:prism="http://prismlibrary.com/" 
             xmlns:viewmodels="clr-namespace:DispImage.ViewModels"
             xmlns:TXCustomControlLib="clr-namespace:TXCustomControlLib;assembly=TXCustomControlLib" x:Class="DispImage.Views.DispImage"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodels:DispImageViewModel}}"
             prism:ViewModelLocator.AutoWireViewModel="True" >
    <Grid>
        <ScrollViewer Grid.Column="0" x:Name="scrollviewer"
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto" 
                      >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="ScrollChanged">
                    <prism:InvokeCommandAction Command="{Binding ScrollChanged}" 
                                               CommandParameter="{Binding ElementName=scrollviewer}"
                                               />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Canvas x:Name="canvas" 
                    Width="{Binding ActualWidth, ElementName=image}" 
                    Height="{Binding ActualHeight, ElementName=image}"
                    RenderOptions.EdgeMode="Aliased"
                    RenderOptions.BitmapScalingMode="NearestNeighbor"
                    >
                <Canvas.LayoutTransform>
                    <ScaleTransform x:Name="scaleTransform"
                            ScaleX="{Binding ZoomRate}" 
                            ScaleY="{Binding ZoomRate}" />
                </Canvas.LayoutTransform>
                <Image x:Name="image" 
                       Source="{Binding ImageSource}"
                       Stretch ="UniformToFill"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                       RenderOptions.EdgeMode="Unspecified"/>
                <Thumb x:Name="thumb1" Canvas.Left="{Binding CurrentX, Mode=TwoWay}" Canvas.Top="0">
                    <i:Interaction.Behaviors>
                        <beh:EventToCommandBehavior Command="{Binding ThumbDragDeltaCommand}" Event="DragDelta" PassArguments="True"/>
                    </i:Interaction.Behaviors>
                    <Thumb.Template>
                        <ControlTemplate>
                            <Line x:Name="Line1" X1="0" X2="0" Y1="0" Y2="{Binding ActualHeight, ElementName=canvas}" StrokeThickness="1" Stroke="Magenta" Opacity="0.5"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
            </Canvas>
        </ScrollViewer>
        <ContentControl Grid.Column="0" prism:RegionManager.RegionName="ImageControlerModule" ></ContentControl>
    </Grid>
</UserControl>
