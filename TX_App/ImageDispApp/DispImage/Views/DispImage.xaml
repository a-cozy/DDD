<UserControl x:Class="DispImage.Views.DispImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DispImage.Views"
             xmlns:uclocal="clr-namespace:DispImage"
             xmlns:prism="http://prismlibrary.com/" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <uclocal:UC_DispImage/>
        <StackPanel Orientation="Vertical" Margin="8" VerticalAlignment="Top" HorizontalAlignment="Left">
            <uclocal:UC_NumSlider ImageFileName="{Binding Title}"/>
            <uclocal:UC_ZoomSlider 
                MaxValueSlider="{Binding MaxSlider}"
                MinValueSlider="{Binding MinSlider}"
                ScaleNum="{Binding ZoomScale, Mode=TwoWay}"
                />
        </StackPanel>
    </Grid>
</UserControl>
