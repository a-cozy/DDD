<UserControl x:Class="ImageControler.Views.ChangeScaler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ImageControler.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
             mc:Ignorable="d" 
             d:DesignWidth="300"
             prism:ViewModelLocator.AutoWireViewModel="True" 
             Height="25" >
    <Grid>
        <StackPanel Orientation="Horizontal">
            <xctk:SingleUpDown Width="100"
                               ParsingNumberStyle="Float"
                               Value="{Binding ScaleNum, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,0" 
                               Increment=".1"
                               />
        </StackPanel>
    </Grid>
</UserControl>
