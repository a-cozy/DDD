<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SampleDataGrid.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:SampleDataGrid="clr-namespace:SampleDataGrid" 
             xmlns:UserCtrl="clr-namespace:SampleDataGrid.UserCtrl" 
             xmlns:viewmodels="clr-namespace:SampleDataGrid.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:DataGridModuleViewModel}"
             x:Class="SampleDataGrid.Views.DataGridModule"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300"
             prism:ViewModelLocator.AutoWireViewModel="True" >
    <Grid>
        <UserCtrl:TestUserControl MesText="{Binding FileName}" SendedImage="{Binding ImageSource}" ZoomRate ="{Binding ZoomRate}" Height="Auto" Width="Auto" />
    </Grid>
</UserControl>
